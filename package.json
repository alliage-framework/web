{
  "name": "root",
  "private": true,
  "repository": "git@github.com:alliage-framework/web.git",
  "author": "Boris LEBON <bo.lebon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npx lerna exec --include-dependencies --stream -- sh \\$LERNA_ROOT_PATH/scripts/build.sh",
    "clean": "npx lerna exec --include-dependencies --stream -- rm -rf dist",
    "lint": "eslint . --ext .js --ext .ts",
    "lint:fix": "yarn lint --silent -- --fix",
    "test:unit": "NODE_ENV=test jest --coverage",
    "test:integration": "NODE_ENV=test jest --maxWorkers=2 --rootDir=. -c ./integration-tests/jest.config.js --forceExit",
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "release": "npx lerna version --conventional-commits --yes",
    "publish": "npx lerna publish from-package --yes",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@alliage/core": "^0.1.0-beta.1",
    "@alliage/framework": "^1.0.0-beta.2",
    "@alliage/sandbox": "^1.0.0-beta.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@typescript-eslint/typescript-estree": "^5.59.1",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.18.2",
    "get-port": "^5.1.1",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "lerna": "^7.0.0-alpha.0",
    "nock": "^13.0.5",
    "prettier": "^2.1.2",
    "semver": "^7.5.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
